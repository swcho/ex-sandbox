	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/apps/nextjs",
			// "outFiles": [
			// 	"${workspaceFolder}/**/*.js",
			// 	"!**/node_modules/**"
			// ],
			// "sourceMapPathOverrides": {
			// 	"meteor://ðŸ’»app/*": "${workspaceFolder}/*",
			// 	"webpack:///./~/*": "${workspaceFolder}/node_modules/*",
			// 	"webpack://?:*/*": "${workspaceFolder}/*",
			// 	"webpack-internal:///*": "${workspaceFolder}/*",
			// }
		},
		{
			"name": "Attach to Chrome",
			"port": 9222,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "node-terminal",
			"request": "launch",
			"name": "Debug nextjs and browser",
			"cwd": "${workspaceFolder}/apps/nextjs",
			"command": "pnpm dev",
			"outFiles": [
				"${workspaceFolder}/**/*.js",
				"**/react-scroll-parallex/**",
				"**/parallex-controller/**",
				"!**/node_modules/**"
			],
			"resolveSourceMapLocations": [
				"${workspaceRoot}/**",
				"${workspaceRoot}/../react-scroll-parallex/**/*",
				"${workspaceRoot}/../parallex-controller/**/*",
			]
		}
	]
}